@page
@model RailManage.Pages.Trains.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>View Listed Trains</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Train[0].TrainName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Train[0].TrainStartLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Train[0].TrainDestinationLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Train[0].TrainCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Train[0].NoOfBoggies)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Train[0].TicketPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Train)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TrainName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrainStartLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrainDestinationLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrainCapacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoOfBoggies)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketPrice)
                </td>
                <td>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
